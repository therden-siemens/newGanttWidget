<?xml version="1.0" encoding="utf-8"?>
<widget id="mendix.newganttwidget.NewGanttWidget" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>New Gantt Widget</name>
    <description>A new Gantt widget using React and based on Google Gantt Charts</description>
    <icon></icon>
    <properties>
        <propertyGroup caption="Data Configuration">

            <property key="dataSource" type="datasource" isList="true" required="true">
                <caption>Data source</caption>
                <description>List of tasks to display in the Gantt chart</description>
                    
            </property>

            <property key="taskId" type="attribute" dataSource="dataSource">
                <caption>Task ID</caption>
                <description>Attribute holding the Task Id</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>

            <property key="taskName" type="attribute" dataSource="dataSource">
                <caption>Task Name</caption>
                <description>Attribute holding the task name</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>

            <property key="taskResource" type="attribute" dataSource="dataSource">
                <caption>Resource</caption>
                <description>Attribute holding the resource</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>

            <property key="startDate" type="attribute" dataSource="dataSource">
                <caption>Start Date</caption>
                <description>Attribute holding the task start date</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="endDate" type="attribute" dataSource="dataSource">
                <caption>End Date</caption>
                <description>Attribute holding the task end date</description>
                <attributeTypes>
                    <attributeType name="DateTime"/>
                </attributeTypes>
            </property>

            <property key="taskDuration" type="attribute" dataSource="dataSource">
                <caption>Task Duration</caption>
                <description>Attribute holding the task duration (only used when no end date given)</description>
                <attributeTypes>
                    <attributeType name="Integer"/>
                </attributeTypes>
            </property>

            <property key="percentComplete" type="attribute" dataSource="dataSource">
                <caption>Percent complete</caption>
                <description>Attribute holding the completion percentage</description>
                <attributeTypes>
                    <attributeType name="Integer"/>
                </attributeTypes>
            </property>

            <property key="taskDependencies" type="attribute" dataSource="dataSource">
                <caption>Task dependecies</caption>
                <description>Attribute holding the dependecies</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>

        </propertyGroup>

        <propertyGroup caption="Styling - General">
            <property key="showCriticalPath" type="boolean" defaultValue="true">
                <caption>Show Critical Path</caption>
                <description>Highlights the critical path</description>
            </property>
            <property key="ganttHeight" type="integer" defaultValue="300">
                <caption>Inner height</caption>
                <description>(Inner) Height of the Gantt chart)</description>
            </property>
        </propertyGroup>

        <propertyGroup caption="Styling - Font">
            <property key="fontType" type="string" defaultValue="Arial">
                <caption>Font</caption>
                <description>Font for row labels</description>
            </property>
            <property key="fontSize" type="integer" defaultValue="12">
                <caption>Font size</caption>
                <description>Font size for row labels</description>
            </property>
            <property key="fontColor" type="string" defaultValue="#000000">
                <caption>Font Color</caption>
                <description>Font color for row labels (works only when no resource is given)</description>
            </property>
        </propertyGroup>

        <propertyGroup caption="Styling - Rows">
            <property key="rowNormalColor" type="string" defaultValue="#FFFFFF">
                <caption>Row color</caption>
                <description>Color for every light row</description>
            </property>
            <property key="rowDarkColor" type="string" defaultValue="#F5F6FC">
                <caption>Row color</caption>
                <description>Color for every dark row</description>
            </property>
        </propertyGroup>
    </properties>
</widget>